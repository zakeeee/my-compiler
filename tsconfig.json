{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "module": "commonjs",
    "removeComments": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
